`timescale 1ns/1ns
module AlUop(input[7:0] A,B,input[1:0] AlUop,output[7:0] AlUout,output zero);
  if(AlUop==2'b 00)
    assign AlUout=A+B;
  else if(AlUop==2'b 01)begin
    assign AlUout=A-B;
    if(AlUout==8'b 0)
      assign zero=1'b 1;
  end
  else if(AlUop==2'b 10)
    assign AlUout=A&B;
  else if(AlUop==2'b 11)
    assign AlUout=~B;
endmodule
  